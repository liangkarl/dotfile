#!/bin/bash

# this is for setting up a workspace in tmux

# TARGET_DIR=$(fasd -d $@)
TARGET_NAME="$1"

__find_session() {
	local sess name

	[[ $# == 0 ]] && return 1

	sess=($(tmux ls -F'#S'))
	[[ ${#sess[@]} == 0 ]] && return 1

	for name in ${sess[@]}; do
		if [[ "$name" == "$1" ]]; then
			return 0
		fi
	done
	return 1
}

parse() {
	local sess name argv cmd

	sess=($(tmux ls -F'#S'))
	cmd=''
	argv=''
	if [[ $# == 0 ]]; then
		if [[ ${#sess[@]} != 0 ]]; then
			name=${sess[0]}
		else # no existed session
			name=$(date +%x)
			cmd='tmux new'
			argv="-d -s $name -c $HOME"
		fi
	else
		name=$(basename $1)
		if ! __find_session $name; then
			cmd='tmux new'
			argv="-d -s $name"
			[ -d "$1" ] && argv+=" -c $1"
		fi
	fi
	$cmd $argv

	argv="-t $name"
	# check inside or outside tmux
	if [ -z "$TMUX" ]; then # outside
		cmd='tmux attach'
	else # inside
		TMUX=''
		cmd="tmux switch-client"
	fi
	$cmd $argv

	exit $?
}

parse $@
