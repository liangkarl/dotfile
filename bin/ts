#!/bin/bash

# this is for setting up a workspace in tmux

# TARGET_DIR=$(fasd -d $@)
TARGET_NAME="$1"

__find_session() {
	local sess

	[[ $# == 0 ]] && return 1

	sess=($(tmux ls -F'#S'))
	[[ ${#sess[@]} == 0 ]] && return 1

	for name in ${sess[@]}; do
		if [[ "$name" == "$1" ]]; then
			return 0
		fi
	done
	return 1
}

parse() {
	local sess target argv cmd
	target=${1:-$USER}
	sess=($(tmux ls -F'#S'))

	# session amount == 0 || not found
	if ! __find_session $target; then
		cmd='tmux new'
		argv="-d -s $target"
		[ -d $target ] && argv+=" -c $target"
		$cmd $argv
	fi

	# session amount != 0
	cmd=''
	argv=''
	if [ -z "$TMUX" ]; then # outside
		cmd='tmux attach'
	else # inside
		TMUX=''
		cmd="tmux switch-client"
	fi
	argv="-t $target"

	unset parse __find_session TARGET_NAME
	$cmd $argv
	# check inside or outside tmux
	exit $?
}

parse $@
