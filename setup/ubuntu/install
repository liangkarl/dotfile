# Basic
sudo apt install -y git curl gawk
sudo apt install -y build-essential

# Applications
sudo apt install -y flameshot copyq kitty gparted aptitude ibus-chewing tio bear wireshark gnome-tweaks sublime-text krita inkscape
sudo apt install -y gparted apt-transport-https xclip net-tools dconf-editor sshpass
sudo apt install -y tweak		# CLI Hex editor

# Brew
/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
brew install neovim tmux fzf libtmux bash ripgrep fd git

