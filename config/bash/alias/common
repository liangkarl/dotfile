# list files
alias ls='ls -v --group-directories-first -N --color=auto'
alias ll='ls -l --time-style=long-iso'
alias la='ls -a'
alias tree='tree --dirsfirst -h'

# misc
alias cls='clear'
alias rsync='rsync -av -h --progress'
alias less='less -R'

# compression
alias txz='tar -Jcv'
alias tgz='tar -zcv'
alias bz2='tar -jcv'
