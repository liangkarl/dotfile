# Config reference
# https://github.com/jonas/tig/blob/master/tigrc

set commit-order = default
set main-view-commit-title-graph = v1

# Addjust the column width of author
set main-view = line-number:no,interval=5 id:no date:default author:full,maxwidth=20 commit-title:yes,graph,refs,overflow=no

bind status D ?git checkout %(file)
bind status A ?git commit --amend
# NOTE:
# `git stash save "stash name"` is deprecated at git 2.16
# and replaced by `git stash push -m "stash name"`
bind status P ?git stash save "%(prompt)"
bind status p ?git stash save "%(prompt)" %(file)

bind refs F ?git fetch . HEAD:%(branch)
bind refs M ?git merge %(branch)
bind refs $ ?git tag -d %(tag)

bind main ! ?git reset --hard %(commit)
bind main @ ?git checkout %(commit)
bind main T ?git tag %(prompt) %(commit)
bind main B ?git branch %(prompt) %(commit)
