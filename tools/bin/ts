#!/bin/bash

# this is for setting up a workspace in tmux

# TARGET_DIR=$(fasd -d $@)
TARGET_NAME="$1"

parse() {
	local sess name argv cmd path

	cmd=''
	argv=''
	path="$(cd $1 2>&-; pwd)"
	sess=($(tmux ls -F'#S' 2>&-))
	if (( $# == 0 )); then
		if (( ${#sess[@]} == 0 )); then
			name=$(date +%x)
			cmd='tmux new'
			argv="-d -s $name -c $HOME"
		fi
	else
		name="$(basename $TARGET_NAME)"	# Assume name a path of dir
		if tmux has-seesion -t $name 2>&-; then
			name=''
		else
			cmd='tmux new'
			argv="-d -s $name -c $path"
		fi
	fi
	$cmd $argv

	# check inside or outside tmux
	if [[ "$TMUX" == '' ]]; then # outside
		cmd='tmux attach'
	else # inside
		TMUX=''
		cmd="tmux switch-client"
	fi
	if [[ "$name" != '' ]]; then
		argv="-t $name"
	fi
	$cmd $argv

	return $?
}

parse $@
